type User {
	id: ID! @unique @id
	name: String!
	email: String! @unique
	updatedAt: DateTime! @updatedAt
	createdAt: DateTime! @createdAt
	posts: [Post!]!
}

type Post {
	id: ID! @unique @id
	title: String!
	body: String!
	published: Boolean!
	author: User!
	updatedAt: DateTime! @updatedAt
	createdAt: DateTime! @createdAt
}

type Comment {
	id: ID! @unique @id
	text: String!
	author: User!
	post: Post!
	updatedAt: DateTime! @updatedAt
	createdAt: DateTime! @createdAt
}
